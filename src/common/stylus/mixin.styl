       .input-cancel
         right 3px
     .chosen-options
       chosen-options()
     input[type=text]
       width 96%
       box-sizing border-box
     .little-bar
       flex 1 0 auto
       max-height 88px
       margin 5px -7px 0 0
     .my-bar
       flex 0 1 280px
       margin-right -7px
       margin-top 8px
       ul
         margin 0
         list-style none
       >ul
         padding 0
         text-align left
         li
           padding 2px 0
           p
             width 200px
             margin 0
             padding 2px 3px
             box-sizing border-box
             cursor default
           >p
            border 0.95px solid transparent
           ul li
             margin-left -14px
             p
              width 174px
 .buttons
   display inline-block
   margin 120px 50px auto 50px
   .button
     display block
     margin-bottom 50px
     i
       font-size 24px

select-label()
  position relative
  z-index 2
  &:before
    content ''
    display block
    position absolute
    top 6px
    right 3px
    width 199px
    height 22px
    background #fff
    z-index -2
  select
    height 22px
    padding-right 23px
    padding-left 2px
    border 1px solid transparent
    line-height 22px
    background transparent
  .select-down
    position absolute
    top 7px
    right 6px
    color #333538
    font-size 18px
    z-index -1

chosen-options()
  width 205px
  text-align left
  font-size 14px
  line-height 16px
  white-space normal
  .chosen-option
    position relative
    display inline-block
    margin 4px 6px 2px 0
    padding 2px 5px 3px 3px
    background rgba(#777, .5)
    border 1px solid rgba(#777, 0.2)
    border-radius 2px
    &:first-of-type
      margin-left 0
    .chosen-cancel
      position absolute
      top -4px
      right -5px
      font-size 11px
      color #888
      cursor pointer
      &:hover
        color #aaa

search-input()
  position relative
  input[type=text]
    width 100%
  .input-cancel
    position absolute
    line-height 55px
    text-align center
    color #ccc
    cursor pointer
    &:hover
      color #888

